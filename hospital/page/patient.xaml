<Page x:Class="hospital.page.patient"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:hospital.page"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="patient">
  
    <Grid>
        <Label HorizontalAlignment="Center"
               Margin="30"
            >здравствуйте вы сможете просмотреть врачей 
        </Label>
        <Image Source="/image/logo.png" Margin="504,110,31,140"/>

        <Label HorizontalAlignment="Center" Margin="50">
            и так же писать коментарии про них
        </Label>

        <StackPanel HorizontalAlignment="Center" 
                    VerticalAlignment="Center">

            <Button Margin="10" Click="Button_Click"
                >
                просмотр врачей
            </Button>

            <Button Margin="10" Click="Button_Click_1">
                добавить коментарии
            </Button>


            <Button Margin="50" Click="Button_Click_2">
                назад
            </Button>

        </StackPanel>
    </Grid>
</Page>
